<%= simple_form_for(@book) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :agreement %>
    <%= f.input :status %>
    <%= f.association :user %>
    <%= f.association :categories %>
    <%= f.association :authors %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
